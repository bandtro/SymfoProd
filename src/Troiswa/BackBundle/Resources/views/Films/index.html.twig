{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block siteTitle %}
    Les Films {{ parent() }}
{% endblock %}

{% block central %}
    <div id="page-wrapper">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <h1 class="page-header">
                        Liste des films
                    </h1>

                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path('troiswa_back_index') }}">Retour à l'accueil</a>
                        </li>

                    </ol>
                </div>
            </div>

            <!-- Page Heading -->
            <div class="row">
            </div>
            <!-- /.row -->

            <div class="row">

                <div class="panel-body">
                    <a class="btn btn-primary" href="{{  path("troiswa_back_create_unfilm") }}">Créer un film</a>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Genre</th>
                                <th>Description</th>
                                <th>Date de réalisation</th>
                                <th>Note</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% if allFilms is empty %}

                                <tr><td>{{ "Pas de films" }}</td></tr>

                            {% else %}
                                {% for film in allFilms %}

                                    <tr>
                                        <td>{{ film.id }}</td>
                                        <td>{{ film.titre|capitalize }}</td>
                                        <td>{{ film.genre.type|capitalize }}</td>
                                        <td>{{ film.description }}</td>
                                        <td>{{ film.dateDeRealisation|date("d/m/Y") }}</td>
                                        <td>{{ film.note }}</td>
                                        <td><img style="width:auto; height:45px;" src="{{ asset( film.displayImage) }}"></td>
                                        <td>
                                            <a class="btn btn-success" href="">Voir</a>
                                            <a class="btn btn-primary" href="{{ path("troiswa_back_modifier_unfilm", {"id":film.id }) }}">Modifier</a>
                                            <a class="btn btn-danger" href="{{ path("troiswa_back_supprimer_unfilm", {"id":film.id }) }}">Supprimer</a>
                                        </td>
                                    </tr>

                                {% endfor %}

                            {% endif %}

                            </tbody>
                        </table>
                    </div>
                    <div class="text-right">
                        <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}
