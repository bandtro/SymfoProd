
{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block titre %}
    Genres {{ parent() }}

{% endblock %}


{% block css_s %}
    {{ parent() }}

{% endblock %}



{% block central %}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">

                    <h1 class="page-header">
                        Liste des genres
                    </h1>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    {%for message in app.session.flashbag.get("success_genre")%}
                    <p class="alert alert-success">{{ message }}</p>
                    {% endfor %}
                    <h2>Tous les genres</h2>

                    <a class="btn btn-xs btn-primary" href="{{ path("troiswa_back_create_genre") }}">Ajouter un Genre</a>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                            </thead>

                            <tbody>

                            {# dump(allActeurs) #}

                            {%  for unGenre in allGenres %}
                                <tr>
                                    <td>{{ unGenre.id  }}</td>
                                    <td>{{ unGenre.type }}</td>
                                    <td>{{ unGenre.description }}</td>
                                    <td>    <a class="btn btn-success" href="{# path('troiswa_back_info_acteurs',{'id': unActeur.id }) #}">Voir</a>
                                        <a class="btn btn-primary" href="{{ path('troiswa_back_modifier_genre',{'id': unGenre.id }) }}">Modifier</a>
                                        <a class="btn btn-danger" href=" ">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor  %}

                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}


