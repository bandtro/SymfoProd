
{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block titre %}
    Genres {{ parent() }}

{% endblock %}


{% block css_s %}
    {{ parent() }}

{% endblock %}



{% block central %}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">

                    <h1 class="page-header">
                        Saisie des genres
                    </h1>

                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path('troiswa_back_index') }}">Retour Ã  l'accueil</a>
                        </li>

                        <li class="active">
                            <a href="{{ path("troiswa_back_genres") }}"><i class="fa fa-table"></i>  Genres /</a>
                            <i class="fa fa-table"></i>  CreerGenre
                        </li>

                    </ol>
                </div>
            </div>
            <!-- /.row -->



            {# {{ form(formGenre) }} #}

            {{ form_start(formGenre, {"attr":{"novalidate":"novalidate"}} ) }}

            {{ form_errors(formGenre.type) }}
            <h4>{{ form_label(formGenre.type, "Type: ", {"label_attr":{"class":"label label-primary"}}) }}</h4>
            {{ form_widget(formGenre.type, {"attr":{"class":"form-control", "placeholder":"Type..."}}) }}

            {{ form_errors(formGenre.description) }}
            <h4>{{ form_label(formGenre.description, "Description: ", {"label_attr":{"class":"label label-primary"}}) }}</h4>
            {{ form_widget(formGenre.description, {"attr":{"class":"form-control", "placeholder":"Description..."}}) }}


            {{ form_widget(formGenre.ajouter, {"attr":{"class":"btn btn-success"}}) }}

            {{ form_end(formGenre) }}


        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}


